@model double

@{
    double stars = Model;
    for (int i = 1; i <= 5; i++)
    {
        if (stars >= 1)
        {
            <i class="fa fa-fw fa-star" aria-hidden="true"></i>
        }
        else if (stars == 0.5)
        {
            <i class="fa fa-fw fa-star-half-o" aria-hidden="true"></i>
        }
        else
        {
            <i class="fa fa-fw fa-star-o" aria-hidden="true"></i>
        }
        stars--;
    }
}